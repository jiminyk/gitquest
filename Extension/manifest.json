{
    "manifest_version" : 2,
    "name" : "GitQuest",
    "version" : "1.0",
    "description" : "Complete github quests daily.",
    "icons" : {
        "16" : "icon_16.png",
        "32" : "icon_32.png",
        "48" : "icon_48.png"
    },
    "background" : {
        "persistent" : false,
        "scripts" : ["background.js"]
    },
    "permissions" : ["activeTab", "declarativeContent", "storage"],
    "page_action" : {
        "default_popup" : "popup.html",
        "default_icon" : {
            "16" : "icon_16.png",
            "32" : "icon_32.png",
            "48" : "icon_48.png"
        }
    }
}